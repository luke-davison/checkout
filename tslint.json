{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "indent": [true, "tabs", 2],
    "no-consecutive-blank-lines": true,
    "ordered-imports": true,
    "quotemark": [true, "single"],
    "semicolon": [true, "never"],
    "whitespace": [true, "check-branch", "check-operator", "check-module", "check-separator", "check-type", "check-typecast", "check-type-operator", "check-preblock"]
  }
}